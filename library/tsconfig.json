{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2023"],
    "declaration": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "cdk.out", "dist"]
}
